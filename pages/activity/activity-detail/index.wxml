<view class="container page">
  <view class="activity-image"></view>
  <van-panel title="活动名称" desc="描述信息" status="状态">
    <view class="activity-details">
      <view>
        <van-icon name="clock-o" />
        报名时间：
      </view>
      <view>
        <van-icon name="gold-coin-o" />
        报名费用：
      </view>
      <view>
        <van-icon name="user-o" />
        报名人数：
      </view>
    </view>
  </van-panel>
  <van-panel title="活动简介" class="activity-intro">活动简介的内容</van-panel>
  
</view>
<view class="divline"></view>
<label>课程提纲</label>
<view class="divline"></view>
<scroll-view scroll-y style="height: 140px">
  <view class="activityDetail">
    <label>活动时间</label>
    <view>{{activity.activityTime}}</view>
  </view>
  <view class="activityDetail">
    <label>活动地点</label>
    <view>{{activity.activityLocation}}</view>
  </view>
  <view class="activityDetail">
    <label>活动对象</label>
    <view wx:for="{{activity.activityObject}}">
      <view>{{item}}</view>
    </view>
  </view>
</scroll-view>
<view class="divline"></view>
<button style="color:white;background-color:#4b0080;height:40px">报名</button>
