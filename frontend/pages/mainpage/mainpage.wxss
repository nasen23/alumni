/* pages/mainpage/mainpage.wxss */

.top-bar {
  width: 100%;
  margin-top: 80rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.top-bar span {
  padding: 0 20px;
}

.top-title {
  font-size: 20px;
  font-weight: 400;
}

.top-avatar {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background-color: black;
}

.search {
  width: 100%;
  padding: 20px;
}

.search-field {
  display: flex;
  padding: 0 10px;
  height: 40px;
  border-radius: 5px;
  background-color: white;
  align-items: center;
  box-shadow: 1px 1px 3px #aaa;
}

.search-field input {
  flex: 1;
  width: 0;
  padding: 0;
  margin: 0;
  border: none;
  outline: none;
}

.search-field text {
  margin-right: 10px;
  font-size: 14px;
  color: #aaa;
}

.history {
  width: 100%;
  padding: 0 20px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.recent {
  font-size: 14px;
  margin-right: 15rpx; 
}

.activity-scroll-view {
  width: 100%;
  padding: 0 20px;
  margin-top: 10px;
  justify-content: flex-start;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}

.activity-view {
  height: 330rpx;
  width: 50%;
  margin-bottom: 20px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.activity-card {
  width: 100%;
  background-color: white;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 1px 1px 3px #aaa;
}

.activity-banner {
  width: 100%;
  height: 150rpx;
  background-color: #009fff;
}

.activity-detail {
  padding: 10px;
}

.activity-intro {
  color: #c2cbd2;
  font-weight: 100;
  font-size: small;
}

.activity-detail {
  width: 100%;
}
