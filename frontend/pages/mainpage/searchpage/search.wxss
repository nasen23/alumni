.activity-scroll-view {
  width: 100%;
  padding: 0 20px;
  margin-top: 10px;
  justify-content: flex-start;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}

.activity-view {
  height: 330rpx;
  width: 50%;
