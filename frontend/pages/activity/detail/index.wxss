/* pages/activity/tmpactivity/tmp.wxss */

swiper {
  height: 100%;
}

.line-separator {
  display: block;
  width: 95%;
  padding: 0;
  height: 1px;
  border: 0;
  border-top: 1px solid #ff790e;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #c2cbd2;
  border-radius: 100%;
  background-color: #ff790e;
}

.detail-list {
  color: #c2cbd2;
  display: flex;
  flex-direction: column;
}

.detail {
  display: flex;
  flex-direction: row;
}

.detail text {
  margin-right: 18rpx;
}

.activity-image {
  height: 300rpx;
  width: 100%;
  background-color: #52658f;
}

.activity-header {
  width: 100%;
  display: flex;
  flex-direction: row;
  padding: 30rpx;
  justify-content: space-between;
}

.activity-title {
  color: #364E65;
  font-size: 50rpx;
  font-weight: 300;
  padding: 18rpx 0;
}

.activity-header-detail-list {
  color: #c2cbd2;
  font-weight: 100;
  font-size: 80%;
}

.activity-header-detail {
  margin: 10rpx 0;
}

.activity-header-detail text {
  width: 35rpx;
  text-align: center;
}

.activity-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  color: white;
  background: #58CEAE;
  font-size: 46rpx;
  font-weight: 50;
  width: 30%;
}

.activity-status view {
  text-align: center;
  margin: 7rpx 0;
}

.activity-detail-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
}

.activity-detail-item {
  width: 100%;
  margin-bottom: 20rpx;
}

.activity-detail-title {
  font-size: 35rpx;
  color: #3796F6;
  margin-bottom: 15rpx;
}

.activity-detail-content {
  color: #90A8BE;
}

.activity-detail-creater {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.name {
  font-size: 35rpx;
  margin-bottom: 10rpx;
}

.creater-info {
  margin: 0 25rpx;
  flex: 1;
}

.creater-profile {
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #EC547A;
  color: white;
  text-align: center;
}

.avatar-link {
  display: flex;
  flex-direction: row;
}

.avatar-link view {
  margin-right: -20rpx;
}

.avatar-link-last {
  text-align: center;
  font-size: 30rpx;
  line-height: 100rpx;
  background-color: white;
}

van-tabbar view {
  width: auto;
}

.wide-tabitem {
  flex: 2;
}

.wide-tabitem .van-tabbar-item__text {
  color: white;
  font-size: 20px;
}

.tabs {
  width: 100%;
  height: 100%;
}

van-tab {
  height: 100%;
}

.inner-container {
  background-color: #f2f2f2;
  height: 100%;
}

.no-participant {
  margin-top: 20px;
  text-align: center;
  color: #aaa;
  font-size: 14px;
}

.participant-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.participant-card {
  width: 100%;
  height: 60px;
  margin-bottom: 10px;
  background-color: #ffffff;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  border: 1px 0 solid #f2f2f2;
}

.small-avatar {
  width: 60rpx;
  height: 60rpx;
  border: 1px solid #c2cbd2;
  border-radius: 100%;
  /* background-color: #ff790e; */
}

.name-container {
  display: flex;
  flex: 2;
  flex-direction: column;
  margin-left: 15px;
  justify-content: center;
}

.username {
  font-size: 14px;
}

.signup-time {
  font-size: 12px;
  color: #aaa;
}

.seq-container {
  font-size: 13px;
  color: #aaa;
}

.seqnum {
  font-size: 12px;
  color: #aaa;
}

.table {
  display: table;
  width: 100%;
  border-collapse: collapse;
  box-sizing: border-box;
}

.table-tr {
  display: table-row;
  height: 50rpx;
}

.table-th {
  display: table-cell;
  border: 1rpx solid gray;
  background-color: #f2f2f2;
  text-align: center;
  vertical-align: middle;
}

.table-td {
  display: table-cell;
  border: 1rpx solid gray;
  text-align: center;
  vertical-align: middle;
}
