<view class="container">
  <van-cell-group>
    <block wx:for="{{ fields }}" wx:key="{{ name }}">
      <van-field
          wx:if="{{ item.required }}"
          required
          label="{{ item.name }}"
          placeholder="{{ item.desc ? item.desc : (holder + item.name) }}"
          data-name="{{ item.name }}"
          bind:change="onInfoFilledIn"
      />
      <van-field
          wx:else
          label="{{ item.name }}"
          placeholder="{{ item.desc ? item.desc : (holder + item.name) }}"
          data-name="{{ item.name }}"
          bind:change="onInfoFilledIn"
      />
    </block>
  </van-cell-group>

  <van-button type="primary" size="large" bind:click="onSubmit">提交</van-button>
</view>
