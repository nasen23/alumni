/* pages/activity/tmpactivity/tmp.wxss */
van-panel, van-cell, .activity-image {
  width: 100%
}

.activity-image {
  height: 300rpx;
  background-color: #52658f;
}

.activity-title {
  text-align: left;
  margin: 20rpx 30rpx;
}

.activity-intro {
  font-weight: 100;
  font-size: small;
}

.activity-details {
  font-weight: 100;
  font-size: small;
  text-align: left;
  color: #c2cbd2;
  margin: 20rpx 20rpx;
}

.tags-back {
  width:200pt;
  display: flex;
  flex-direction: row;
  align-items: left;
  flex-wrap:wrap;
}

.scroll-tags {
  display: flex;
  width: 200%;
  flex-direction: row;
  white-space:nowrap;
}

.scroll-tags view{
  width: 20%;
  display: inline-block;
}

.tags {
  display:flex;
  align-items:center;
  justify-content:center;
  color: white;
  font-size:15px;
  height:20px;
  background-color: orange;
  margin-left: 5px;
  margin-top: 5px;
}

.divline {
  margin: 5px;
  background:black;
  width:150%;
  height: 3rpx;
}
.activityDetail {
  display: flex;
  flex-direction: column;
  margin: 10px;
}

.activityDetail view{
  margin-left: 10px;
}
