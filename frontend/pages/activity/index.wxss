.tabs {
  width: 100%;
  height: 100%;
}

van-tab {
  height: 100%;
}

.inner-container {
  padding: 20rpx;
  background-color: #f2f2f2;
  height: 100%;
}

.noactivity {
  margin-top: 20px;
  text-align: center;
  color: #aaa;
  font-size: 14px;
}

.activity-list {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.activity-card {
  margin-bottom: 10px;
  background-color: #ffffff;
  border-radius: 5px;
  height: 147rpx;
  padding: 20rpx;
  display: block;
}

.activity-title {
  font-size: 17px;
  font-weight: 200;
  margin-bottom: 10rpx;
}

.activity-introduction {
  font-size: 12px;
  color: #aaa;
}

.plus {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  right: 0;
  bottom: 0;
  margin: 15px;
  background-color: #fff;
  border-radius: 50%;
  height: 40px;
  width: 40px;
  box-shadow: 1px 1px 3px #aaa;
  animation: scaling 1.6s ease infinite;
}

.plus text {
  color: #aaa;
  font-weight: 100;
  font-size: 15px;
}

@keyframes scaling {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
